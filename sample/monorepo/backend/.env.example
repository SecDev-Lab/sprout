# Backend API service configuration
API_PORT={{ auto_port() }}
API_HOST=0.0.0.0

# Authentication
JWT_SECRET={{ JWT_SECRET }}
JWT_EXPIRY=24h

# External services
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER={{ SMTP_USER }}
SMTP_PASS={{ SMTP_PASS }}

# File upload
UPLOAD_MAX_SIZE=10MB
UPLOAD_PATH=/tmp/uploads

# Rate limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100